<%= render 'admin/employees/nav_tabs' %>

<div class="container">
 <table class="table table-hover">
    <thead>
      <tr>
        <th>
          #
        </th>
        <th>
          <%= hp_human_name_for(:attendance, :check_in) %>
        </th>
        <th>
          <%= hp_human_name_for(:attendance, :check_out) %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each_with_index do |attendance, index| %>
        <tr>
          <td>
            <%= index + 1 %>
          </td>
          <td>
            <%= hp_field_content(attendance.check_in, format: '%d-%m-%Y %l:%M %P') %>
          </td>
          <td>
            <%= hp_field_content(attendance.check_out, format: '%d-%m-%Y %l:%M %P') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

