<%= form_for([:admin, @employee], html: { class: 'display-inline' }) do |f| %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label(:name) %>
      <%= f.text_field(:name, class: 'form-control', autofocus: true) %>
      <%= f.error_messages(:name) %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label(:last_names) %>
      <%= f.text_field(:last_names, class: 'form-control') %>
      <%= f.error_messages(:last_names) %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label(:gender) %>
      <div class="d-block">
        <%= f.select :gender,
            hp_employee_gender_options_for_select(@employee.gender),
            { include_blank: true },
            { class: 'selectpicker form-control' } %>
      </div>
      <%= f.error_messages(:gender) %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label(:email) %>
      <%= f.text_field(:email, class: 'form-control') %>
      <%= f.error_messages(:email) %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label(:code) %>
      <%= f.text_field(:code, class: 'form-control') %>
      <%= f.error_messages(:code) %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label(:phone) %>
      <%= f.text_field(:phone, class: 'form-control') %>
      <%= f.error_messages(:phone) %>
    </div>
  </div>

  <%= f.submit(class: 'btn btn-primary') %>
<% end %>
