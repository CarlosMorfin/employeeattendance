<% content_for :title, title = t('.title') %>

<div class="row justify-content-center mt-5">
  <div class="col-md-4">
    <h2><%= title %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.text_field :email,
            autofocus:    true,
            autocomplete: 'email',
            class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password,
            autocomplete: 'off',
            class:        'form-control' %>
      </div>

      <%= f.submit t('.login'), class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
